.page-header
  = link_to new_location_path, :class => 'btn btn-primary' do
    %i.icon-plus.icon-white
    New Location
  %h1 Listing locations

= render 'search'

%table.table.table-bordered.table-striped
  %thead
    %tr
      %th Name
      %th Address
      %th Website
      %th Distance
      %th
      %th
      %th

  %tbody
    - @locations.each do |location|
      %tr
        %td= location.name
        %td= location.address
        %td= location.website
        %td= location.distance if params[:search]
        %td= link_to 'Show', location
        %td= link_to 'Edit', edit_location_path(location)
        %td= link_to 'Destroy', location, :data => { confirm: 'Are you sure?' }, :method => :delete
